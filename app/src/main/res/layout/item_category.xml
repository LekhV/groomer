<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="255dp"
    android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    >
    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="255dp"
        android:background="@drawable/prof">

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="255dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp" >
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="255dp"
            android:background="@color/colorGray">
            <ImageView
                android:id="@+id/imageViewProodCoorAkciibig"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/color_groom"
                android:scaleType="center"/>

            <ImageView
            android:id="@+id/imageViewCat"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                app:srcCompat="@drawable/logo_white" />


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="174dp"
            android:background="@color/colorGray"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewCatName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="TextViewTextVi"
                android:textColor="@color/colorGroom"
                android:textSize="20dp" />
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>


</RelativeLayout>