<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="264dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardElevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="170dp"
        android:layout_height="264dp"

        android:background="@drawable/prof">
        <ImageView
            android:id="@+id/imageViewProodCoorCS"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/color_groom"
            android:scaleType="center"/>
        <ImageView
            android:id="@+id/imageViewProodCS"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/logo_white" />

        <TextView
            android:id="@+id/textViewNameNameCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:text="NameNameNameNameNameNameNameNameName"
            android:textColor="#000000"
            android:textSize="18dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
