<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGroom">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageViewProd"
            android:layout_width="150dp"
            android:layout_height="170dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/textViewProdName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="140dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" >
            <TextView
                android:id="@+id/textViewNamePriceProdold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="103000 грн."

                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/textViewProdPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="103000 грн."
                android:textColor="@color/colorGroom"
                android:textSize="18dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>