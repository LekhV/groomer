<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigator.FragmentInform.FragmentInformDetail.ActivityProfKon">

    <include
        layout="@layout/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Консультация в магазине Groomer.com.ua"
        android:textColor="@color/colorGroom"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGroom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Обязанности продаца-консультанта магазина Groomer.com.ua" />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
android:text="Продавец-консультант обязан:\n
  - Предоставить полную консультацию по каждой единице товара интернет-магазина Groomer.com.ua, в рабочее время (Пн.- сб. с 9:00 до 18:00, Вс 9:00 до 16:00).\n  - Уведомить клиента об акциях магазина.\n  - Согласовать каждый заказ в телефонном режиме с клиентом.\n  - Оглашать сумму заказа.\n  - Оглашать сумму персональной скидки если таковая имеется.\n  - Информировать клиентов о сумме накопления, по дисконтной программе.\n  - Огласить сроки доставки заказа по требованию клиента.\n  - Предоставить номер транспортной декларации (ТТН) в СМС-сообщении, после отправки заказа.\n  - По требованию клиента предоставить фотографии товара в реальном времени.\n  - В случае отсутствия товара, предложить аналог схожий по техническим характеристикам.\n  - Проинформировать клиента об условиях возврата и обмена товара, а также об условиях гарантии.\n"
                android:textColor="#000"
                android:textSize="16dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>