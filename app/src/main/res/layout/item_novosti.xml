<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rof_not_green">
            <ImageView
                android:id="@+id/imageViewNovosti"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/gr_acana" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_above="@+id/textViewDataNovosti"

                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-144dp"
                android:orientation="vertical"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textViewNovostiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Выставка собака Кубок Акана 2019 и Кубок Еспри 2019."
                    android:textColor="#000"
                    android:textSize="20dp" />
                <WebView
                    android:id="@+id/textContentNovostiDes"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:text="Fulldescription"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textViewNo"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Весенняя акция от Groomer.com.ua Дорогие и уважаемые грумеры! Компания Groomer от всей души поздравляет Вас с Днем Грумера и прекрасным женским праздником 8 Марта..."
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewDataNovosti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="28.02.2019"
                android:textSize="14dp"
                />

            <Button
                android:id="@+id/buttonNovosti"
                android:layout_width="80dp"
                android:layout_height="24dp"

                android:layout_marginTop="150dp"
                android:layout_marginLeft="180dp"

                android:background="@drawable/prof"
                android:paddingLeft="8dp"
                android:text="Подробнее..."
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="10dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>