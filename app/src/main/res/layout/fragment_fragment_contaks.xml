<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="90dp"
    tools:context=".Navigator.FragmentInform.FragmentContaks">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
    <TextView
        android:id="@+id/textViewG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorGroom"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Магазин Groomer" />

    <TextView
        android:id="@+id/textViewG2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewG"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:text="Запоріжжя, " />

    <TextView
        android:id="@+id/textViewG3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewG2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:text="вул. Незалежної України, 82 " />

    <TextView
        android:id="@+id/textViewG4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewG3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGroom"
        android:textSize="20dp"
        android:text="График работы:" />

    <TextView
        android:id="@+id/textViewG5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewG4"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:text="Пн.- Сб. с 9-00 до 18-00;\n Воскресенье с 9:00 до 16:00." />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_below="@+id/textViewG5"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/kar" />
</LinearLayout>
    </ScrollView>

</RelativeLayout>